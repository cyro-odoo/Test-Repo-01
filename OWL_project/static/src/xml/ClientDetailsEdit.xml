<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">

    <t t-name="ClientDetailsEdit_Inherit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-left')]" position="inside">
            <div class="client-detail">
                <span class="label">Customer Type</span>

                <select class="detail needsclick" name="customer_type" t-on-change="captureChange">
                    <option value="patient" t-att-selected="props.partner.customer_type === 'patient' ? true : false">Patient</option>
                    <option value="consumer"  t-att-selected="props.partner.customer_type === 'consumer' ? true : false">Consumer</option>
                    <option value="caregiver"  t-att-selected="props.partner.customer_type === 'caregiver' ? true : false">Caregiver</option>
                    <option value="externalpatient" t-att-selected="props.partner.customer_type === 'externalpatient' ? true : false">Exp</option>

                </select>
            </div>
        </xpath>
    </t>
</templates>